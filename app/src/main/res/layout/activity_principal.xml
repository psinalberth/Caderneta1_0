<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Principal" android:weightSum="1">

    <LinearLayout
        android:id="@+id/wrapper"
        android:layout_width="300dp" android:weightSum="0.5"
        android:orientation="vertical" android:layout_height="300dp" android:layout_gravity="top|center">
        <LinearLayout android:id="@+id/LinearLayout02" android:layout_width="match_parent" android:layout_weight="0.25" android:layout_height="0dp" android:orientation="horizontal">


            <ImageButton android:id="@+id/btNovoAluno"
                android:layout_width="0dp"
                android:background="@drawable/caderneta_button"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher"
                android:gravity="center"
                android:text="Button Challenge" />


            <ImageButton android:id="@+id/btListarAlunos"
                android:layout_width="0dp"
                android:background="@drawable/caderneta_button"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher"
                android:gravity="center"
                android:text="Button Challenge" />

        </LinearLayout>
        <LinearLayout android:id="@+id/LinearLayout01" android:layout_width="match_parent" android:layout_weight="0.25" android:layout_height="0dp">
            <Button android:id="@+id/Button01" android:text="Professores" android:layout_width="0dp" android:layout_weight="1" android:layout_height="fill_parent" android:drawableTop="@drawable/ic_launcher" android:paddingTop="40dp" android:paddingBottom="30dp"></Button>
            <Button android:id="@+id/Button02" android:text="Alunos" android:layout_width="0dp" android:layout_weight="1" android:layout_height="fill_parent" android:drawableTop="@drawable/ic_launcher" android:paddingTop="40dp" android:paddingBottom="30dp"></Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>



