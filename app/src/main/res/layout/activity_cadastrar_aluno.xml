<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin" android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ps.pdm.caderneta10.activity.CadastrarAlunoActivity"
    android:weightSum="1">

    <TextView
        style="@style/CadernetaSectionHeader"
        android:text="Novo Aluno"/>
    
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:weightSum="0.6">

        <TextView
            style="@style/CadernetaFormViewText"
            android:text="Nome: "/>

        <EditText android:id="@+id/txtNome"
            style="@style/CadernetaFormEditText"/>

        <TextView
            style="@style/CadernetaFormViewText"
            android:text="Turma: "/>

        <Spinner android:id="@+id/cbTurma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.5"
            android:gravity="center|bottom">

            <Button android:id="@+id/btSalvar"
                android:background="@drawable/caderneta_button"
                style="@style/CadernetaButton"
                android:text="Salvar"/>

            <Button android:id="@+id/btCancelar"
                android:background="@drawable/caderneta_button"
                style="@style/CadernetaButton"
                android:text="Cancelar"/>

        </LinearLayout>

     </LinearLayout>

</LinearLayout>
